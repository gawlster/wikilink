{
    "name": "Wikepedia Game",
    "description": "A game to navigate between Wikipedia articles.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "notifications",
        "webNavigation"
    ],
    "host_permissions": [
        "https://en.wikipedia.org/*"
    ]
}
